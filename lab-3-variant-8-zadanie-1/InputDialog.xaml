<Window x:Class="lab_3_variant_8_zadanie_1.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ввод чисел" Height="250" Width="400">
    <Grid>
        <Label Content="Введите числа через запятую:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="NumbersInput" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" Width="360" Height="100" FontSize="16" TextWrapping="Wrap"/>
        <Button Content="OK" Width="80" Height="30" HorizontalAlignment="Right" Margin="0,150,10,0" VerticalAlignment="Top" Click="OKButton_Click"/>
    </Grid>
</Window>

 