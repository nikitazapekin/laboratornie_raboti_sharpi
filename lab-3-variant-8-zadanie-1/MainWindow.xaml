<Window x:Class="lab_3_variant_8_zadanie_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab_3_variant_8_zadanie_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="19,20,0,0">
            <TextBlock Text="Введите количество чисел (n):" FontSize="16"/>
            <TextBox x:Name="InputN" Width="200" Height="30" Margin="5" FontSize="16"/>
            <Button x:Name="GenerateButton" Content="Сгенерировать" Width="200" Height="30" Margin="5" Click="GenerateButton_Click"/>
            <TextBlock Text="Сгенерированные числа:" Margin="5" FontSize="16"/>
            <TextBox x:Name="OutputNumbers" Width="300" Height="100" Margin="5" FontSize="16" IsReadOnly="True" TextWrapping="Wrap"/>
            <TextBlock Text="Минимальный элемент:" Margin="5" FontSize="16"/>
            <TextBox x:Name="MinNumber" Width="300" Height="100" Margin="5" FontSize="16" IsReadOnly="True" TextWrapping="Wrap"/>
            <TextBlock Text="Сумма между первым и вторым отрицательным числом:" Margin="5" FontSize="16"/>
            <TextBox x:Name="Sum" Width="300" Height="100" Margin="5" FontSize="16" IsReadOnly="True" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
