<Window x:Class="lab6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox x:Name="FirstNameTextBox"  Margin="5"/>
            <TextBox x:Name="LastNameTextBox"  Margin="5"/>
            <DatePicker x:Name="DateOfBirthPicker" Margin="5"/>
            <Button Content="Добавить студента" Click="AddStudentButton_Click" Margin="5"/>
            <Button Content="Удалить студента" Click="RemoveStudentButton_Click" Margin="5"/>
            <Button Content="Сортировать по фамилии" Click="SortButton_Click" Margin="5"/>
            <TextBox x:Name="SearchTextBox"  Margin="5"/>
            <Button Content="Найти студента" Click="FindButton_Click" Margin="5"/>
            <TextBlock x:Name="ResultTextBlock" Text="Результаты" Margin="5" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
