<Window x:Class="lab10Variant8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab10Variant8"
        mc:Ignorable="d"
        Title="MainWindow" Height="1250" Width="1800">
    <Grid>
       
        <Menu VerticalAlignment="Top"  Background="LightGray" Panel.ZIndex="2">
            <MenuItem FontSize="22" Header="Файл">
                <MenuItem FontSize="22" Header="Считать данные с файла" />
                <MenuItem FontSize="22" Header="Сохранить" />
            </MenuItem>
        </Menu>

     
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="0,0,0,0">
            <Canvas    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                       Background="LightGray" />
        </ScrollViewer>
    </Grid>
</Window>
