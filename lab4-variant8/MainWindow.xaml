<Window x:Class="lab4_variant8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab4_variant8"
        mc:Ignorable="d"
        Title="MainWindow" Height="1250" Width="1800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Enter Date (DD.MM.YYYY):" />
            <TextBox x:Name="DateInputTextBox" Width="200" Margin="0,5" />

            <Button Content="Set Date" Click="SetDateButton_Click" Margin="0,10" />
            <Button Content="Add Days" Click="AddDaysButton_Click" Margin="0,5" />
            <Button Content="Add Months" Click="AddMonthsButton_Click" Margin="0,5" />
            <Button Content="Add Years" Click="AddYearsButton_Click" Margin="0,5" />

            <TextBlock Text="Current Date:" Margin="0,20" />
            <TextBlock x:Name="CurrentDateTextBlock" FontWeight="Bold" />
        </StackPanel>
    </Grid>
</Window>
