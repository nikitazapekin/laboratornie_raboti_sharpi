<Window x:Class="lab4_variant8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab4_variant8"
        mc:Ignorable="d"
        Title="MainWindow" Height="1250" Width="1800">
    <Grid>
        <Image HorizontalAlignment="Left" Height="257" Margin="737,141,0,0" VerticalAlignment="Top" Width="993" Source="/screen.png"/>
        <TextBox x:Name="DateInputTextBox" HorizontalAlignment="Left" FontSize="22" Margin="55,176,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="224" Height="34"/>
        <Label Content="Введите дату в формате DD.MM.YYYY" FontSize="22" HorizontalAlignment="Left" Margin="55,112,0,0" VerticalAlignment="Top" Height="40" Width="425"/>
        <Button Content="Установить дату"  Click="SetDateButton_Click"  FontSize="22" HorizontalAlignment="Left" Margin="55,368,0,0" VerticalAlignment="Top" Height="47" Width="375"/>
        <Button Content="Увеличить день" Click="AddDaysButton_Click" FontSize="22"  HorizontalAlignment="Left" Margin="55,433,0,0" VerticalAlignment="Top" Height="47" Width="375"/>
        <Button Content="Увеличить месяц" Click="AddMonthsButton_Click"  FontSize="22" HorizontalAlignment="Left" Margin="55,499,0,0" VerticalAlignment="Top" Height="47" Width="375"/>
        <Button Content="Увеличить год" Click="AddYearsButton_Click"  FontSize="22" HorizontalAlignment="Left" Margin="55,570,0,0" VerticalAlignment="Top" Height="47" Width="375"/>
        <TextBlock x:Name="CurrentDateTextBlock" FontWeight="Bold" HorizontalAlignment="Left"    FontSize="22" Margin="55,310,0,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="55,259,0,0" TextWrapping="Wrap" Text="Установленная дата:" VerticalAlignment="Top"/>
    </Grid>
</Window>


