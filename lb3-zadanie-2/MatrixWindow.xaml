<Window x:Class="lb3_zadanie_2.MatrixInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ввод чисел" Height="250" Width="400">
    <Grid>
       
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
         
            <RowDefinition Height="Auto"/>
         
        </Grid.RowDefinitions>
 
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <StackPanel Name="InputFieldsPanel" VerticalAlignment="Center" HorizontalAlignment="Center" />
        </ScrollViewer>

      
        <Button Grid.Row="1" Content="Подтвердить" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Height="30" Click="ConfirmButton_Click"/>
    </Grid>
</Window>

 