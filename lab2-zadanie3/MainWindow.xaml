<Window x:Class="lab2_zadanie3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab2_zadanie3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button  Click="EvaluateButtonClick" Content="Calculate" HorizontalAlignment="Left" Margin="15,109,0,0" VerticalAlignment="Top" Width="91" Grid.Row="1" FontSize="20"/>
        <Label Content="Введите Xmin" HorizontalAlignment="Left" Margin="15,7,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.421,0.733" FontSize="20"/>
        <TextBox x:Name="TextBoxXMin" HorizontalAlignment="Left" Margin="15,49,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" FontSize="20"/>
        <Label Content="Введите Xmax" HorizontalAlignment="Left" Margin="15,86,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Введите dx" HorizontalAlignment="Left" Margin="15,152,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Введите погрешность" HorizontalAlignment="Left" Margin="15,16,0,0" VerticalAlignment="Top" FontSize="20" Grid.Row="1"/>
        <Image HorizontalAlignment="Left" Height="68" Margin="214,31,0,0" VerticalAlignment="Top" Width="556" Source="/Снимок экрана (3801).png"/>
        <TextBox  x:Name="TextBoxXMax" HorizontalAlignment="Left" Margin="15,123,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" FontSize="20"/>
        <TextBox x:Name="TextBoxDx" HorizontalAlignment="Left" Margin="15,198,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.RowSpan="2" FontSize="20"/>
        <TextBox x:Name="TextBoxEpsilon" HorizontalAlignment="Left" Margin="15,64,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Row="1" FontSize="20"/>
        <ListBox x:Name="valuesList" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="239,123,65,94" Grid.RowSpan="2" FontSize="20"/>

    </Grid>
</Window>
