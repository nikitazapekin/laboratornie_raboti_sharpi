        <TextBox x:Name="TextBoxDx" HorizontalAlignment="Left" Margin="33,395,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" FontSize="20"/>
        <TextBox x:Name="TextBoxEpsilon" HorizontalAlignment="Left" Margin="30,503,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" FontSize="20"/>
        <ListBox x:Name="valuesList" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="239,123,65,94" Grid.RowSpan="2" FontSize="20"/>

    </Grid>
</Window>
