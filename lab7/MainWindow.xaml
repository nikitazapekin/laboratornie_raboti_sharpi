<Window x:Class="lab7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab7"
        mc:Ignorable="d"
        Title="MainWindow" Height="1450" Width="1800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Название пункта назначения:"/>
            <TextBox x:Name="destinationTextBox" Width="200"/>

            <TextBlock Text="Номер поезда:" Margin="0,10,0,0"/>
            <TextBox x:Name="trainNumberTextBox" Width="200"/>

            <TextBlock Text="Время отправления (yyyy-MM-dd HH:mm):" Margin="0,10,0,0"/>
            <TextBox x:Name="departureTimeTextBox" Width="200"/>

            <Button Content="Добавить поезд" Margin="0,10,0,0" Click="AddTrain_Click"/>
            <Button Content="Вывести все поезда" Click="DisplayAllTrains_Click"/>

            <TextBlock Text="Результат:" Margin="0,10,0,0"/>
            <TextBox x:Name="outputTextBox" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" IsReadOnly="True" Height="200"/>
        </StackPanel>
    </Grid>
</Window>
